    <br>

    <div>
        {% for memberItem in MemberList %}
            <div>
                <b>NAME</b><br><span><span>{{ memberItem.famillyname }}</span>/{{ memberItem.name }}</span>
            </div>
            <div>
                <b>Email</b><br><span>{{ memberItem.email }}</span>
            </div>
            <div>
                <b>GitHub</b><br><span>{{ memberItem.github }}</span>
            </div>
            <div>
                <b>契約区分</b><br><span>{{ memberItem.division }}</span>
            </div>

            <hr>
        {% endfor %}
